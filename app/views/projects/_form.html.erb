<%= form_with(model: project) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, value: 'Name', id: :project_name %>
  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, value: 'Description', id: :project_description %>
  </div>

  <div class="actions">
    <%= form.submit "Create Project" %>
  </div>
<% end %>