<% title(@project.name, "Projects") %>

<p id="notice"><%= notice %></p>

<%= @project.name %>
<%= @project.description %>
<br />

All tickets for <%= @project.name %> :
<br \>
<% @project.tickets.each do |ticket| %>
  Name: <%= ticket.name %>
  - Description: <%= ticket.description %>
  <br />
<% end %>
<br />



<%= link_to "Delete project", project_path(@project), method: :delete,
            data: {confirm: "Are you sure you want to delete this project?"} %><br \>

<%= link_to 'Create Ticket', new_project_ticket_path(@project, @ticket) %>